set laststatus=2
highlight statusType ctermfg=15 ctermbg=none
highlight statusFile ctermfg=15 ctermbg=none
highlight statusMod ctermfg=15 ctermbg=none
highlight statusNorm ctermfg=15 ctermbg=none
highlight statusLocation ctermfg=15 ctermbg=none
highlight statusPercent ctermfg=15 ctermbg=none
highlight statusTotal ctermfg=15 ctermbg=none

let g:currentmode={
        \ 'n'      : 'NORMAL ',
        \ 'v'      : 'VISUAL ',
        \ 'V'      : 'V-Line ',
        \ "\<C-V>" : 'V-Block ',
        \ 'i'      : 'INSERT ',
        \ 'R'      : 'REPLACE ',
        \ 'Rv'     : 'V-Replace ',
        \ 'c'      : 'Command ',
        \}

set statusline=
set statusline+=\ %{toupper(g:currentmode[mode()])}
set statusline+=%#statusType#
set statusline+=\ %Y\
set statusline+=%#statusFile#
set statusline+=\ %F\
set statusline+=%#statusMod#
set statusline+=\ %m\
set statusline+=%#statusNorm#
set statusline+=%=
set statusline+=%#statusLocation#
set statusline+=%-9(\ \ %02l:%02c\ \ %)
set statusline+=%#statusPercent#
set statusline+=%6(\ %p%%\ %)
set statusline+=%#statusTotal#
set statusline+=\ Total:\ %L\ 
